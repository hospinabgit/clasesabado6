
<h3>Crear Libro </h3>
<form method="post" action="<%=libro_crear_path%>">
<%= hidden_field_tag :authenticity_token, form_authenticity_token%>
<div> 
    <label>Nombre</label>
    <br>
    <input type="text" placeholder= "Ingrerse el nombre" name="book[title]">
</div>

<div>
<label>Autor</label>
<br>
<select name ="book[author_id]">
<% for author in @authors%>
<option value ="<%=author.id%>">
<%= author.name%>
</option>
<%end%>
</select>
</div>




<div>
    <label>Descripcion</label>
    <br>
    <textarea name="book[descripcion]"> </textarea>
</div>

<div> 
    <button type="submit">Crear</button>
</div>

</form>